{
    "compilerOptions": {
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES6",
        "module": "Node16",
        "lib": ["ES2017", "ES7", "ES6"],
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": false,
        "moduleResolution": "node16",
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}